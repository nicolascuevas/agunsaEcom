<p id="notice"><%= notice %></p>

<h1>Customer Clients</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Identifier</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_clients.each do |customer_client| %>
      <tr>
        <td><%= customer_client.customer_id %></td>
        <td><%= customer_client.name %></td>
        <td><%= customer_client.last_name %></td>
        <td><%= customer_client.identifier %></td>
        <td><%= customer_client.email %></td>
        <td><%= customer_client.phone %></td>
        <td><%= link_to 'Show', customer_client %></td>
        <td><%= link_to 'Edit', edit_customer_client_path(customer_client) %></td>
        <td><%= link_to 'Destroy', customer_client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

