<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'Inicio', root_path %></li>
    <li class="breadcrumb-item"><%= link_to 'Paises', countries_path %></li>
    <li class="breadcrumb-item active"><%= @country.name %></li>
  </ol>
</nav>

<p id="notice"><%= notice %></p>

<h1><%= @country.name %></h1>


<h2>Regiones</h2>
<%= link_to 'Nueva Region', new_country_region_path(@country), class: "btn btn-sm btn-warning" %>
<br>
<br>

<div class="table-responsive">
  <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo SiL</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= link_to region.name, country_region_path(@country, region) %></td>
        <td><%= region.sil_code %></td>
        <td><%= link_to 'Edit', edit_country_region_path(@country, region) %>
        <%= link_to 'Destroy', country_region_path(@country, region), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

