<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @country.name %>
</p>

<h1>Regiones</h1>
<%= link_to 'Nueva Region', new_country_region_path(@country) %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sil code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.sil_code %></td>
        <td><%= link_to 'Show', country_region_path(@country, region) %></td>
        <td><%= link_to 'Edit', edit_country_region_path(@country, region) %></td>
        <td><%= link_to 'Destroy', country_region_path(@country, region), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

