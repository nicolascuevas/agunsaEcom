<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_country_region_path(@country, @region) %> |
<%= link_to 'Back', country_path(@country) %>

<hr>


<p>
  <strong>Country:</strong>
  <%= @region.country_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @region.name %>
</p>

<p>
  <strong>Sil code:</strong>
  <%= @region.sil_code %>
</p>
<br>


<h1>Coumunas</h1>
<%= link_to 'Nueva Comuna', new_country_region_commune_path(@country,  @region) %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo SIL</th>

    </tr>
  </thead>

  <tbody>
    <% @communes.each do |commune| %>
      <tr>
        <td><%= commune.name %></td>
        <td><%= commune.sil_code %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
