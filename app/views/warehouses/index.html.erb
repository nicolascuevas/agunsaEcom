<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to 'inicio', root_path %></li>
    <li class="breadcrumb-item active">Bodegas</li>
  </ol>
</nav>


<p id="notice"><%= notice %></p>

<h1>Warehouses</h1>
<%= link_to 'Actualizar Bodegas', import_agunsa_warehouses_path, method: :post, class:"btn btn-sm btn-warning" %>
<%= link_to 'New Warehouse', new_warehouse_path, class:"btn btn-sm btn-warning" %>

<div class="table-responsive">
  <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Name</th>
      <th>Locations</th>
    </tr>
  </thead>

  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= link_to warehouse.customer.client_code, customer_path(warehouse.customer) %></td>
        <td><%= link_to warehouse.name, warehouse_path(warehouse) %></td>
        <td><%= warehouse.warehouse_locations.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

