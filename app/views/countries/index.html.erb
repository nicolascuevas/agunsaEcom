<p id="notice"><%= notice %></p>

<h1>Paises</h1>

<%= link_to 'Agregar Pais', new_country_path, class: "btn btn-sm btn-warning" %>
<br><br>
<div class="table-responsive">
  <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Regiones</th>
      <th>Comunas</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.name, country_path(country) %></td>
        <td><%= link_to country.regions.count, country_path(country) %></td>
        <td><%= country.communes.count %></td>
        <td>
        <%= link_to 'Editar', edit_country_path(country) %>
        <%= link_to 'Borrar', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

